{
	"compilerOptions": {
		"target": "es2022",
		"lib": ["es2017", "es7", "es6", "dom"],
		"experimentalDecorators": true,
		"module": "commonjs",
		"baseUrl": "./src",
		"declaration": true,
		"paths": {
			"@/*": ["*"]
		},
		"outDir": "./build",
		"removeComments": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "node"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
